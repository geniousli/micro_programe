/* pages/news/news.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  padding: 0px !important;
}
.header{
  height: 10%;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
}
.header button{
  display: block;
  flex-grow: 1;
  background-color: #FFFFFF;
  border-style: none;
  flex-wrap: wrap;
}
navigator{
  display: block;
}
.container .content {
  height: 90%;
  width: 100%;
  background-color: #FFFFFF;
}
page{
  height: 100%;
}

.post{
  display: flex;
  flex-direction: row;
  width: auto;
  margin: 10px;
  overflow: hidden;
}
.post .main_post {
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column; 
}
.post .user{
  width: 20%;
  height: 100%;
}

.main_post .content {
  margin-top: 10px;
  overflow-wrap: break-word;
}
.main_post .image_container{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}

.replies {
  display: flex;
  flex-direction: column;
}
.replies .reply{
  display: flex;
  flex-direction: row;
  margin: 10px 0px 10px 20px;
  width: auto;
}

.reply .reply_content{
  border-bottom: 1px solid #dadada;
}
.reply_user{
  width: 20%;
  overflow-wrap: break-word;
}

.reply_content{
  width: 80%;
  padding-left: 10px;
}


