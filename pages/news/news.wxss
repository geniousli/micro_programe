/* pages/news/news.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  padding: 0px !important;
}
.header{
  height: 10%;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.header button{
  background-color: #F6F8F9;
  border-style: none;
  flex-grow: 1;
  text-align: center;
  font-size: 1em;
  border-radius: 0px;
}
.header button.selected{
  color: #1AAD19;
  
}
navigator{
  display: block;
}
.content {
  height: 90%;
  width: 100%;
  background-color: #FFFFFF;
}
page{
  height: 100%;
}

.post{
  display: flex;
  flex-direction: row;
  width: auto;
  margin: 10px;
  overflow: hidden;
  padding-bottom: 10px;
  border-bottom: 1px solid #dadada;
}
.post .main_post {
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column; 
}
.post .user{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction:  row;
  flex-grow: 1;
}
.post .user view{
  flex: 0 0 25%;
}
.post .user .user_head {
  flex: 0 0 50%;
}
.user_head image{
  width: 100%;
  border-radius: 50px;
}

.main_post .content {
  margin-top: 10px;
  overflow-wrap: break-word;
  
}
.main_post .image_container{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}
.operator{
  display: flex;
  flex-direction: row;
}
.operator view {
  width: 40%;
}
.operator button {
    height: 20px;
  display: inline-block;
}
.operator button.like{
  background-image: url(data:image/png;base64,);
}
.operator button.liked{
  background-image: url(data:image/png;base64,)
}
.operator button.chat{
  background-image: url(data:image/png;base64,);
}

.reply {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  background-color: white;
  height: 100px;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}
.reply .reply_content{
  height: 50px;
  padding: 10px;
}
.reply .reply_operate{
  width: 100%;
  display: flex;
  flex-direction: rows;
}
.reply_operate .confirm_button{
  flex-grow: 4;
}
.reply_content .cancel_button{
  flex-grow: 1;
}
